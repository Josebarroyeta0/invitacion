name: Build y despliegue

on:
  push:
    branches: [main] # Se ejecuta cuando se suben cambios a la rama principal (main)

jobs:
  build:
    runs-on: ubuntu-latest # Se ejecuta en un servidor virtual con Ubuntu

    steps:
      - uses: actions/checkout@v3 # Descarga el código del repositorio

      - name: Construir la aplicación # Aquí van los comandos para construir tu aplicación
        run: |
          # Ejemplo: Si tienes un proceso de build con npm
          npm install
          npm run build

          # Si solo tienes archivos estáticos, no necesitas comandos de build
          # Puedes copiar los archivos a una carpeta llamada "dist"
          mkdir -p dist
          cp -r *.html *.css *.js dist/

      - name: Desplegar la aplicación # Aquí van los comandos para desplegar tu aplicación
        uses: actions/upload-artifact@v3 # Sube los archivos construidos como un artefacto
        with:
          name: aplicación-construida
          path: dist # La carpeta que contiene los archivos construidos
